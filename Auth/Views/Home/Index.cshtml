                {
                    <li><a href="https://accounts.google.com/signup/v2/webcreateaccount?flowName=GlifWebSignIn&flowEntry=SignUp">Sign Up</a></li>

                    <li>
                        @*<a href="#"></a><button type="button" class="button1">Log In</button></a>*@
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Secured">
                            <button type="button" class="button1">
