    <body oncontextmenu="return false;">
        <header>
            <a href="#" class="logo">NZ Bird Identification and Training Website</a>
            <ul class="navigation">
                <li><a href="#">Home</a></li>


                <li>
                    @*<a href="quizstart.html">Quiz</a>*@
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="QuizStart">
                        Quiz
                    </a>
                </li>


                <li>
                    @*<a href="#">Home</a>*@
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Admin">
                        Admin Page
                    </a>
                </li>


                <li>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Glossary">
                        Glossary
                    </a>
