        <div class="QPage1">
            <h2>Quiz > Options</h2>
            <form name="quizOptions" action="~/Home/Quiz" onsubmit="return compulsoryField()" method="post">
                <ul class="Options">

                    <li>
                        Enter number of questions you wish to answer*: <input type="text" id="compulsoryNumber" name="number">
                    </li>
                    <li>
                        <label for="Difficulty">Difficulty</label>
                        <select name="Difficulty" id="Difficulty">
                            <option value="Basic">Basic</option>
                            <option value="Advanced">Advanced</option>
                        </select>
                    </li>
                    <li>
                        <label for="Order">Select Order</label>
                        <select name="Order" id="Order">
                            <option value="null">null</option>
                        </select>
                    </li>
                    <li>
                        <label for="Status">Select Status</label>
                        <select name="Status" id="Status">
                            <option value="null">null</option>
                        </select>
                    </li>
                    <li>
                        <label for="Habitat">Select Habitat</label>
                        <select name="Habitat" id="Habitat">
                            <option value="null">null</option>
                        </select>
                    </li>

                </ul>
                <h4>*Compulsory field</h4>

                <input type="submit" value="Submit">
                <input type="reset" value="Reset">
            </form>

        </div>
